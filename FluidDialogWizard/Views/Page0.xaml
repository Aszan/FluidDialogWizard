<navigation:Page x:Class="FluidDialogWizard.Views.Page0" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           Title="Fluid Dialog Wizard">
    <Grid x:Name="LayoutRoot">
        <StackPanel Margin="30,0,30,0">
            <TextBlock 
                       FontFamily="Segoe UI Light"
                       FontSize="20"
                       Text="Welcome"
                       Foreground="White"/>
            <TextBlock Margin="0,10,0,0"
                       FontFamily="Segoe UI"
                       FontSize="12"
                       Text="Let's get started by clicking the button below."
                       Foreground="#FFB3B3B3"/>
            <Button x:Name="StartButton" Click="StartButton_OnClick" Margin="0,100,0,0" >Start</Button>
        </StackPanel>
    </Grid>
</navigation:Page>
